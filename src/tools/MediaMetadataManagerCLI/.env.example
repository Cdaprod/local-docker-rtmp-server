# Media path on host machine
MEDIA_PATH=/path/to/your/media

# Configuration storage path
CONFIG_PATH=./data

# ML models storage path
MODELS_PATH=./models

# API keys for enhanced functionality
OPENAI_API_KEY=your_openai_api_key
GOOGLE_APPLICATION_CREDENTIALS=/app/src/tools/config/google-credentials.json

# Web interface port (if added in the future)
PORT=3000

# Database configuration
DB_PATH=/app/src/tools/config/metadata.sqlite

# Analysis settings
VIDEO_FRAME_SAMPLE_RATE=1
MAX_FRAMES_TO_ANALYZE=100
ENABLE_AUDIO_TRANSCRIPTION=true
ENABLE_SCENE_DETECTION=true